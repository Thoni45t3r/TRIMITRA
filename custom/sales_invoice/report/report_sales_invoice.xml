<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="report_sales_invoice_template">
		<t t-call="web.html_container">
			<t t-call="web.external_layout">
				<t t-foreach="docs" t-as="o">
				<div style="text-align: left;margin: 0px;padding: 13px;">
					<div id="header1" class="page">
						<tr style="text-align: left; width: 100%; font-size: 30px;">
							<td style="font-size: 30px"><center><b>F A K T U R</b></center></td>
						</tr>
					</div>
					<div id="header2" class="page">
						<table style="width: 100%; padding: 13px;">
						<tr>
						<td style="width:50%;">
							<table>
								<tr>
									<td style="width: 17%; text-align: left;">No. Faktur</td>
									<td style="width: 3%; text-align: left;">:</td>
									<td style="width: 30%; text-align: left;"><span t-field="o.number"/></td>
								</tr>
								<tr>
									<td style="width: 17%; text-align: left;">Tanggal Faktur</td>
									<td style="width: 3%; text-align: left;">:</td>
									<td style="width: 30%; text-align: left;"><span t-esc="o.date_invoice.strftime('%d %B %Y')"/></td>
								</tr>
								<tr>
									<td style="width: 17%; text-align: left;">TOP</td>
									<td style="width: 3%; text-align: left;">:</td>
									<td style="width: 30%; text-align: left;"><span t-field="o.payment_term_id.name"/></td>
								</tr>
								<tr>
									<td style="width: 17%; text-align: left;">Jatuh Tempo</td>
									<td style="width: 3%; text-align: left;">:</td>
									<td style="width: 30%; text-align: left;"><span t-esc="o.date_due.strftime('%d %B %Y')"/></td>
								</tr>
								<tr>
									<td style="width: 17%; text-align: left;">Salesman</td>
									<td style="width: 3%; text-align: left;">:</td>
									<td style="width: 30%; text-align: left;"><span t-field="o.user_id.login"/></td>
								</tr>
							</table>
						</td>
						<td style="width: 50%;">
							<table>
								<tr>
									<td style="width: 17%; text-align: left;">Nama Toko</td>
									<td style="width: 3%; text-align: left;">:</td>
									<td style="width: 30%; text-align: left;"><span t-esc="o.partner_id.display_name"/></td>
								</tr>
								<tr>
									<td style="width: 17%; text-align: left;">Owner</td>
									<td style="width: 3%; text-align: left;">:</td>
									<td style="width: 30%; text-align: left;"><span t-esc="o.partner_id.name"/></td>
								</tr>
								<tr>
									<td style="width: 17%; text-align: left;">Alamat</td>
									<td style="width: 3%; text-align: left;">:</td>
									<td style="width: 30%; text-align: left;"><span t-esc="o.partner_id.street"/></td>
								</tr>
								<tr>
									<td style="width: 17%; text-align: left;">No. Telp</td>
									<td style="width: 3%; text-align: left;">:</td>
									<td style="width: 30%; text-align: left;"><span t-esc="o.partner_id.mobile"/></td>
								</tr>
								<tr>
									<td style="width: 17%; text-align: left;">No. SJ</td>
									<td style="width: 3%; text-align: left;">:</td>
									<td style="width: 30%; text-align: left;"></td>
								</tr>
							</table>
						</td>
						</tr>
						</table>
					</div>
				</div>
					<div class="page">
						<div style="-webkit-flex: 1; -ms-flex: 1; flex: 1; padding: 3px; width: 100%;">
							<table style="width: 100%; padding: 10px; border: 1px solid black; border-collapse: collapse;">
								<thead>
									<tr>
										<td rowspan="2" style="padding: 10px; border: 1px solid black; border-collapse: collapse; text-align: center"><b>No.</b></td>
										<td rowspan="2" style="padding: 10px; border: 1px solid black; border-collapse: collapse; text-align: center"><b>Kode Barang</b></td>
										<td rowspan="2" style="padding: 10px; border: 1px solid black; border-collapse: collapse; text-align: center"><b>Nama Barang</b></td>
										<td rowspan="2" style="padding: 10px; border: 1px solid black; border-collapse: collapse; text-align: center"><b>Satuan</b></td>
										<td rowspan="2" style="padding: 10px; border: 1px solid black; border-collapse: collapse; text-align: center"><b>Qty</b></td>
										<td rowspan="2" style="padding: 10px; border: 1px solid black; border-collapse: collapse; text-align: center"><b>Harga</b></td>
										<td rowspan="2" style="padding: 10px; border: 1px solid black; border-collapse: collapse; text-align: center"><b>Diskon</b></td>
										<td rowspan="2" style="padding: 10px; border: 1px solid black; border-collapse: collapse; text-align: center"><b>Jumlah</b></td>
									</tr>
								</thead>
								<tbody>
									<t t-set="i" t-value="0"/>
									<t t-foreach="o.invoice_line_ids" t-as="line">
										<t t-set="i" t-value="i+1"/>
										<tr>
											<td style="padding: 10px; border: 1px solid black; border-collapse: collapse; text-align: center"><t t-esc="i"/></td>
											<td style="padding: 10px; border: 1px solid black; border-collapse: collapse; text-align: left"><span t-field="line.product_id.default_code"/></td>
											<td style="padding: 10px; border: 1px solid black; border-collapse: collapse; text-align: left"><span t-field="line.product_id.product_tmpl_id.name"/></td>
											<td style="padding: 10px; border: 1px solid black; border-collapse: collapse; text-align: center"><span t-field="line.uom_id.name"/></td>
											<td style="padding: 10px; border: 1px solid black; border-collapse: collapse; text-align: center"><span t-esc="'%.0f' % line.quantity"/></td>
											<td style="padding: 10px; border: 1px solid black; border-collapse: collapse; text-align: center"><span t-field="line.price_unit"/></td>
											<td style="padding: 10px; border: 1px solid black; border-collapse: collapse; text-align: center"><span t-field="line.discount"/> % </td>
											<td style="padding: 10px; border: 1px solid black; border-collapse: collapse; text-align: center"><span t-field="line.price_subtotal"/></td>
										</tr>
									</t>
								</tbody>
								<tfoot>
									<tr>
										<td style="padding: 10px; text-align: center"></td>
										<td style="padding: 10px; text-align: left"></td>
										<td style="padding: 10px; text-align: left"></td>
										<td style="padding: 10px; text-align: center"></td>
										<td style="padding: 10px; text-align: right"></td>
										<td style="padding: 10px; text-align: left"><b>Sub Total</b></td>
										<td style="padding: 10px; text-align: center"></td>
										<td style="padding: 10px; text-align: right"><span t-field="o.amount_untaxed"/></td>
									</tr>
									<tr>
										<td style="padding: 10px; text-align: center"></td>
										<td style="padding: 10px; text-align: left"></td>
										<td style="padding: 10px; text-align: left"></td>
										<td style="padding: 10px; text-align: center"></td>
										<td style="padding: 10px; text-align: right"></td>
										<td style="padding: 10px; text-align: left"><b>Total</b></td>
										<td style="padding: 10px; text-align: center"></td>
										<td style="padding: 10px; text-align: right"><span t-field="o.amount_total"/></td>
									</tr>
								</tfoot>
							</table>
							<p/>
							<div style="width: 100%; text-align: left;"><i>FAKTUR TITIPAN</i></div>
							<p/>
							<tr>
								<td style="width: 17%; text-align: left;">Terbilang</td>
								<td style="width: 3%; text-align: left;">:</td>
								<td style="width: 30%; text-align: left;"><span t-field="o.amount_to_text"/></td>
							</tr>
							<p/>
							<table style="width: 100%;">
								<tr style="width: 100%;">
									<td style="width: 33%; padding: 10px; text-align: center;">Diterima oleh,</td>
									<td style="width: 34%; padding: 10px; text-align: center;"></td>
									<td style="width: 33%; padding: 10px; text-align: center;">Hormat Kami,</td>
								</tr>
								<tr><td colspan="3">&#160;</td></tr>
								<tr style="width: 100%;">
									<td style="width: 33%; padding: 10px; text-align: center;">_______________________________________</td>
									<td style="width: 34%; padding: 10px; text-align: center;"></td>
									<td style="width: 33%; padding: 10px; text-align: center;">_______________________________________</td>
								</tr>
							</table>
						</div>
					</div>
				</t>
			</t>
		</t>
	</template>
</odoo>